# Application Configuration
# Version: 1.0.0
VITE_APP_NAME=Random Word Generator
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# API Configuration
# Base URL and version for API endpoints
VITE_API_BASE_URL=http://localhost:3000
VITE_API_VERSION=v1

# API Performance Settings
VITE_API_TIMEOUT=5000
VITE_API_RETRY_COUNT=3

# Auth0 Configuration
# Required for secure user authentication
VITE_AUTH0_DOMAIN=your-auth0-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your-auth0-client-id
VITE_AUTH0_AUDIENCE=https://api.wordgenerator.com
VITE_AUTH0_CALLBACK_URL=http://localhost:5173/callback

# Error Tracking & Monitoring
# Sentry DSN for error reporting
VITE_SENTRY_DSN=your-sentry-dsn

# Feature Flags
VITE_ENABLE_MFA=true
VITE_ENABLE_DICTIONARY_CACHE=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_API_RATE_LIMIT_WINDOW=60000

# Security Settings
VITE_AUTH_TOKEN_EXPIRY=3600
VITE_REFRESH_TOKEN_EXPIRY=7776000
VITE_SESSION_CHECK_INTERVAL=60000

# Dictionary API Configuration
VITE_DICTIONARY_API_ENDPOINT=https://api.dictionary.com/v1
VITE_DICTIONARY_API_TIMEOUT=3000

# Supported Languages
VITE_SUPPORTED_LANGUAGES=en,es,fr,de

# Cache Configuration
VITE_CACHE_DURATION=3600000
VITE_MAX_CACHE_SIZE=100